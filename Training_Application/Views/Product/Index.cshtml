@{
    ViewBag.Title = "Product List";
    var products = ViewBag.ProductList as List<Dictionary<string, string>>;
}

<h2>Product List</h2>

<p><a class="btn btn-primary" href="/Product/Create">Add New Product</a></p>

@if (products != null && products.Count > 0)
{
    <table class="table table-bordered table-striped" style="width: 60%;">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price ($)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product["Id"]</td>
                    <td>@product["Name"]</td>
                    <td>@product["Price"]</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}
